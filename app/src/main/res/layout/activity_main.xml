<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Disp">

    <TextView
        android:id="@+id/tvOutputNum"
        android:layout_width="213dp"
        android:layout_height="56dp"
        android:text="Hello World!"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etInputNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/etInputNum2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etInputNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/tvOutputNum"
        app:layout_constraintEnd_toEndOf="@+id/tvOutputNum"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvOutputNum" />

    <Button
        android:id="@+id/btnOpeFlag_1"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOutputNum" />

    <Button
        android:id="@+id/btnOpeFlag_2"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/btnOpeFlag_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnOpeFlag_1"
        app:layout_constraintTop_toBottomOf="@+id/btnOpeFlag_1" />

    <Button
        android:id="@+id/btnOpeFlag_3"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:text="*"
        app:layout_constraintEnd_toEndOf="@+id/btnOpeFlag_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnOpeFlag_2"
        app:layout_constraintTop_toBottomOf="@+id/btnOpeFlag_2" />

    <Button
        android:id="@+id/btnOpeFlag_4"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_marginBottom="56dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnOpeFlag_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnOpeFlag_3"
        app:layout_constraintTop_toBottomOf="@+id/btnOpeFlag_3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>